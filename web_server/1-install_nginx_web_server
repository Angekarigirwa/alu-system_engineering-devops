#!/usr/bin/env bash
# Sets up a web server with Nginx and a custom index page that says "Holberton School"

# Exit on error
set -e

# Update package list
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Allow Nginx through the firewall (ignore if ufw is not active)
sudo ufw allow 'Nginx HTTP' || true

# Overwrite the default index.html page with the required content
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Ensure Nginx is running and enabled at boot
sudo systemctl restart nginx
sudo systemctl enable nginx

