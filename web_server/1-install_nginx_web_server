#!/usr/bin/env bash
# Install Nginx and configure the welcome page

# Update package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Overwrite the default index.html with the required content
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Ensure Nginx is running and will start on boot
sudo systemctl restart nginx
sudo systemctl enable nginx

